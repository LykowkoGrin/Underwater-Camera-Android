<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Внешний контур (круг с белым контуром) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="100dp" />
            <stroke android:color="#FFFFFF" android:width="5dp" />
        </shape>
    </item>

    <!-- Внутренний круг (красный), который можно скрыть -->
    <item android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp">
        <shape android:shape="oval">
            <solid android:color="#FF0000" />
            <corners android:radius="1000dp" />
            <size android:width="20dp" android:height="20dp" />
        </shape>
    </item>
</layer-list>